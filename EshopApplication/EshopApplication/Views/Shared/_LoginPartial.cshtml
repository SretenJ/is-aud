@using Microsoft.AspNetCore.Identity
@using EshopApplication.Domain.DomainModels.Identity;
@inject SignInManager<EshopApplicationUser> SignInManager
@inject UserManager<EshopApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
        </li>

        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark" asp-controller="account" asp-action="Logout">Logout</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="account" asp-action="Register">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="account" asp-action="login">Login</a>
        </li>

    }
</ul>
